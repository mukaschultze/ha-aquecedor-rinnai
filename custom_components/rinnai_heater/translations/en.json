{
  "title": "Rinnai Heater",
  "config": {
    "step": {
      "user": {
        "description": "Select the heater host",
        "data": {
          "host": "[%key:common::config_flow::data::host%]"
        },
        "data_description": {
          "host": "Try using WIFI-RINNAI.local or WIFI-RINNAI.lan if you don't know the IP address of the controller"
        }
      },
      "config": {
        "description": "Select the device name",
        "data": {
          "name": "[%key:common::config_flow::data::name%]",
          "scan_interval_consumo": "Scan Interval - Usage (seconds)",
          "scan_interval_tela": "Scan Interval - Tela (seconds)",
          "scan_interval_bus": "Scan Interval - Bus (seconds)"
        },
        "data_description": {
          "scan_interval_consumo": "Scan interval for gas and water usage updates",
          "scan_interval_tela": "Scan interval for flame updates",
          "scan_interval_bus": "Scan interval for all other sensors updates"
        }
      },
      "reconfigure": {
        "description": "Update the {device_name} settings.",
        "data": {
          "name": "[%key:common::config_flow::data::name%]",
          "host": "[%key:common::config_flow::data::host%]",
          "scan_interval_consumo": "[%key:component::rinnai::config::step::config::data::scan_interval_consumo%]",
          "scan_interval_tela": "[%key:component::rinnai::config::step::config::data::scan_interval_tela%]",
          "scan_interval_bus": "[%key:component::rinnai::config::step::config::data::scan_interval_bus%]"
